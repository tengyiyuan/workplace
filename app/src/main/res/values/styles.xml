<!--suppress ALL -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 配置 页头的通用 -->
    <style name="TitleTheme">
        <!-- 头部字体默认20dp  -->
        <item name="android:textSize">20dp</item>

    </style>

    <!--配置普通样式 -->
    <style name="CommonTheme">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Input样式 -->
    <style name="InputTheme">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text_content_defaut">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- Layout样式 -->
    <style name="LayoutTheme">
        <!-- <item name=""></item> -->
    </style>

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 微信支付 -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">#FFE1E8EB</item>
    </style>

    <style name="MMLineActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:background">@mipmap/btn_style_one_normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否悬浮在activity上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
        <item name="android:windowContentOverlay">@null</item><!-- 对话框是否有遮盖 -->
        <item name="android:colorBackgroundCacheHint">@null</item><!-- 背景缓存颜色 -->
    </style>

    <style name="main_bg_hui">
        <item name="android:background">#f0f0f0</item>
    </style><!-- 中间线条割线颜色-->
    <style name="line_color">
        <item name="android:background">@color/line_color</item>
    </style><!-- 弹出框样式-->
    <style name="edit_AlertDialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style><!-- 弹窗字体样式 -->
    <style name="text_tanchuang">
        <item name="android:textSize">14sp</item>
    </style><!-- 推送样式 -->
    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bar</item>
        <item name="android:minHeight">19.5dp</item>
        <item name="android:maxHeight">19.5dp</item>
    </style>

    <style name="my_text_defult_title_000">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_16000">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style><!-- 登录注册按钮样式 -->
    <style name="loing_button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="list_line_color">
        <item name="android:background">#f0f0f0</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="PushTopMenu" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>

    <!-- photoPicker style -->
    <style name="actionBarTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="actionBarSize">16sp</item>
    </style>

    <style name="customTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <item name="colorPrimary">#FFA500</item>
        <item name="actionBarSize">16sp</item>
        <item name="colorPrimaryDark">#CCa500</item>
    </style>
</resources>
