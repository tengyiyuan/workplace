<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_table_no"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_myreimbursement_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/gray999"
            android:textSize="14sp"
            android:text="201604291351"/>

        <TextView
            android:id="@+id/tv_myreimbursement_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="@color/red_highlight"
            android:textSize="14sp"
            android:text="审核中"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@color/btn_white_pressed"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_myreimbursement_type_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="报销类型:"/>
        <TextView
            android:id="@+id/tv_myreimbursement_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_myreimbursement_type_str"
            android:padding="10dp"
            android:textColor="@color/gray999"
            android:textSize="14sp"
            android:text="差旅费、业务招待费"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_myreimbursement_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="报销时间:"/>
        <TextView
            android:id="@+id/tv_myreimbursement_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_myreimbursement_str"
            android:padding="10dp"
            android:textColor="@color/gray999"
            android:textSize="14sp"
            android:text="2016-8-3"/>
    </RelativeLayout>
</LinearLayout>
