<?xml version="1.0" encoding="utf-8"?><!-- 学校ListView Item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/list_item_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mukeimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/mukewei" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/mukeimg"
        android:text="行政法师"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/mukeimg"
        android:text="开始时间:2016-10-09"
        android:textColor="@color/green"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/starttime"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/mukeimg"
        android:text="结束时间:2016-10-09"
        android:textColor="@color/green"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endtime"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/mukeimg"
        android:text="已有3008人参加"
        android:textColor="@color/logo_color"
        android:textSize="12sp" />
</RelativeLayout>