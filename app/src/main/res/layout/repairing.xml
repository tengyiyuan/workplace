<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 头部显示信息 -->

    <RelativeLayout
        android:id="@+id/signin_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/logo_color">

        <ImageView
            android:id="@+id/iv_add_repair_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/btn_return" />

        <TextView
            android:id="@+id/tv_repair_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/add_repair"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_equipment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xinghao"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="@string/add_repair_equipment_type_title"
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/rg_equipment_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_equipment_type"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbt_equipment_yidong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="@color/gray666"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbt_equipment_diannao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:checked="false"
                android:textColor="@color/gray666"
                android:textSize="14sp" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_internet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xinghao"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="@string/add_repair_internet_type_title"
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/radio_internet_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_internet_type"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbt_internet_wuxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="@color/gray666"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbt_internet_youxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:checked="false"
                android:textColor="@color/gray666"
                android:textSize="14sp" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_internet_near"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xinghao"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="@string/add_repair_internet_near_title"
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/radio_internet_near_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_internet_near"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbt_internet_near_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="正常"
                android:textColor="@color/gray666"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbt_internet_near_slow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:checked="false"
                android:text="不正常"
                android:textColor="@color/gray666"
                android:textSize="14sp" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_fault_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xinghao"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="@string/add_repair_fault_address_title"
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_select_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_fault_code"
            android:background="@drawable/tv_repair_bg"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/img_xiala"
            android:gravity="center"
            android:hint="请选择区域"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/tv_select_floornum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_select_area"
            android:background="@drawable/tv_repair_bg"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/img_xiala"
            android:gravity="center"
            android:hint="请选择楼号"
            android:paddingLeft="10dp" />


        <EditText
            android:singleLine="true"
            android:id="@+id/tv_fault_address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_select_area"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_fault_code"
            android:background="@drawable/tv_repair_bg"
            android:hint="@string/add_repair_fault_address_hint"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_question_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/xinghao"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="@string/add_repair_question_type_title"
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_question_type_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_select"
            android:layout_toRightOf="@+id/tv_question_type"
            android:background="@drawable/tv_repair_bg"
            android:drawableRight="@mipmap/img_xiala"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="@string/add_repair_question_type_hint" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_fault_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:text="@string/add_repair_fault_description_title"
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_fault_description_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tv_fault_description"
            android:background="@drawable/tv_repair_bg"
            android:paddingLeft="10dp"
            android:hint="@string/add_repair_fault_description_hint"
            android:inputType="none"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_reairing_next"
            style="@style/loing_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/next" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_reairing_next"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/xinghao"
            android:drawablePadding="3dp"
            android:text="@string/add_repair_bitianxiang"
            android:textColor="@color/gray666"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>