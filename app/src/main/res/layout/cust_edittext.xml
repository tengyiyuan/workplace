<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >

    <TextView
        android:id="@+id/txt_lable"
        style="@style/my_text_defult_title_000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:gravity="center_vertical" />

    <EditText
        android:id="@+id/edit_content"
        style="@style/text_16000"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/image_delete"
        android:layout_toRightOf="@+id/txt_lable"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:inputType="numberPassword"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColorHint="#a9a9a9" >
    </EditText>

    <ImageView
        android:id="@+id/image_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/image_delete"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/edit_delete"
        android:visibility="gone" />

</RelativeLayout>