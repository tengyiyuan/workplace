<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 这个TextView就是显示字母的 -->
    <TextView
        android:id="@+id/tv_lv_item_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBarText"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="Z"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_tea_contacts_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_lv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text=""
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_tea_contacts_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lv_item_name"
            android:layout_marginLeft="5dip"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/gray333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_tea_contacts_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/phone" />
    </RelativeLayout>

</LinearLayout>
