<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_table_no"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_myrepair_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/gray999"
            android:textSize="14sp"
            android:text="201604291351"/>

        <TextView
            android:id="@+id/tv_myrepair_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="待维修"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@color/btn_white_pressed"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_rereason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="报修原因:"/>
        <TextView
            android:id="@+id/tv_myrepair_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_rereason"
            android:padding="10dp"
            android:textColor="@color/gray999"
            android:textSize="14sp"
            android:text="手机连接不上SDMU反正连接不上网络了"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_retime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray999"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="报修时间:"/>
        <TextView
            android:id="@+id/tv_myrepair_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_retime"
            android:padding="10dp"
            android:textColor="@color/gray999"
            android:textSize="14sp"
            android:text="2016-4-29"/>
        <TextView
            android:id="@+id/tv_repair_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/light_green"
            android:padding="10dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="@string/tv_repair_evaluate"/>
        <TextView
            android:id="@+id/tv_repair_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_green"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/tv_repair_cancle"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="@string/tv_repair_edit"/>
        <TextView
            android:id="@+id/tv_repair_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/light_green"
            android:padding="10dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="@string/tv_repair_cancle"/>
    </RelativeLayout>
</LinearLayout>
