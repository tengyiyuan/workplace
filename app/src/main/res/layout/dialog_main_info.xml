<?xml version="1.0" encoding="utf-8"?>
<!-- 常用Dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
	android:background="@drawable/bg_yuanjiao_dioa_your"
	android:padding="10dp"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/height_gray"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
		android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:gravity="center"/>
    <RelativeLayout 
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:gravity="center"
		android:layout_marginTop="10dp"
	     android:layout_marginBottom="14dp"
        >
		<Button
		    android:id="@+id/tv_dialog_left_btn"
	        android:layout_width="100dp"
	        android:layout_height="32dp"
			android:layout_toRightOf="@+id/tv_dialog_right_btn"
	        android:background="@mipmap/btn_orange"
	        android:textSize="14sp"
	        android:textColor="@color/white"
		    />
		<Button 
		    android:id="@+id/tv_dialog_right_btn"
	        android:layout_width="100dp"
	        android:layout_height="32dp"
			android:layout_marginRight="14dp"
	        android:background="@mipmap/btn_gray"
	        android:textSize="14sp"
	        android:textColor="@color/white"
		    />
	</RelativeLayout>
</LinearLayout>